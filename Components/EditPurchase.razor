@using BlazorEditFormExamples.Model
@inherits Editor<Purchase>
<div class="row">
    <div class="form-floating col-md-2">
        <InputDate @bind-Value="Value.Date" class="form-control" placeholder="Date" />
        <label>Date</label>
    </div>
    <div class="form-floating col-md-5">
        <InputText @bind-Value="Value.Product" class="form-control" placeholder="Product" />
        <label>Product</label>
    </div>
    <div class="form-floating col-md-4">
        <InputNumber @bind-Value="Value.Price" class="form-control" placeholder="Price" />
        <label>Price</label>
    </div>
    <div class="col-md-1 d-flex align-items-center">
        <a class="btn ms-auto" style="width:50px;" @onclick="async () => await RemoveItem.InvokeAsync()">
            <i class="fa fa-xmark ms-2" ></i>
        </a>
    </div>
</div>


@code {
    [Parameter]
    public EventCallback RemoveItem { get; set; }
}
